{
  "name": "simple-statistics",
  "version": "7.0.0",
  "description": "Simple Statistics",
  "author": "Tom MacWright <tom@macwright.org> (http://macwright.org/)",
  "repository": {
    "type": "git",
    "url": "git://github.com/simple-statistics/simple-statistics.git"
  },
  "files": [
    "src",
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "documentation": "^9.1.1",
    "eslint": "^5.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "jsdoctest": "^1.7.1",
    "mocha": "^5.0.0",
    "prettier": "^1.15.3",
    "random-js": "^1.0.4",
    "rollup-plugin-terser": "^4.0.1",
    "standard-version": "^4.0.0",
    "tap": "^12.0.1",
    "typescript": "^2.5.3",
    "rollup": "^1.0.1"
  },
  "scripts": {
    "release": "standard-version && sh ./scripts/update_website.sh",
    "test": "npm run build && npm run lint && tap --coverage test/*.test.js --jobs=4 && npm run jsdoctest",
    "build": "rollup -c rollup.config.js",
    "prepublish": "npm run build && ./scripts/update_readme.js",
    "prelint": "tsc",
    "lint": "eslint index.js src test",
    "postlint": "documentation lint src",
    "jsdoctest": "mocha --require jsdoctest dist/simple-statistics.js"
  },
  "main": "dist/simple-statistics.js",
  "module": "dist/simple-statistics.mjs",
  "umd:main": "dist/simple-statistics.min.js",
  "browser": "dist/simple-statistics.min.js",
  "unpkg": "dist/simple-statistics.min.js",
  "types": "index.d.ts",
  "engines": {
    "node": "*"
  },
  "license": "ISC",
  "keywords": [
    "descriptive",
    "linear",
    "math",
    "probability",
    "regression",
    "statistics"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
